.count-box{
  /* width: 100%; */
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.viewport{
  width: 100%;
  overflow: hidden;
}
.column-wrap{
  width: 100%;
  transform: translate3d(0, 0, 0);
  transition: all 1s cubic-bezier(0, 1, 0, 1);
}
.item{
  width: 100%;
  text-align: center;
  font-size: 40px;
  font-weight: bold;
}